package test;

public class Test {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		        int[] a = {69, 10, 30, 2, 16, 8, 31, 22};

		        System.out.println("Input Data : 69 10 30 2 16 8 31 22\n");

		        // 선택 정렬 (Selection Sort)
		        for (int step = 0; step < a.length - 1; step++) {
		            int minIndex = step;

		            // 최소값 찾기
		            for (int i = step + 1; i < a.length; i++) {
		                if (a[i] < a[minIndex]) {
		                    minIndex = i;
		                }
		            }

		            // 값 교환 (Swap)
		            int temp = a[step];
		            a[step] = a[minIndex];
		            a[minIndex] = temp;

		            // 정렬 과정 출력
		            System.out.print("Sorted Data " + (step + 1) + "단계 : ");
		            for (int num : a) {
		                System.out.print(num + " ");
		            }
		            System.out.println();
		        }
		    }
		}